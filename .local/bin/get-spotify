#!/bin/bash

## put script sp in ~
## put in ~/.local/bin/get-spotify
track="$(~/sp current | sed '4q;d' | awk '{$1=""; print $0}' | sed 's/^ *//g' | sed 's/ *$//g') - $(~/sp current | sed '3q;d' | awk '{$1=""; print $0}' | sed 's/^ *//g' | sed 's/ *$//g')"

if [ "$track" == " - " ]; then
track="No Spotify"
fi

echo ï§† $track
